package classes.views.body.menu {	import classes.views.NavigationBarButton;	import flash.display.Sprite;	import flash.text.TextField;	import flash.events.MouseEvent;	import flash.display.MovieClip;	import flash.events.Event;	import fl.transitions.Tween;	import fl.transitions.easing.Strong;	import flash.display.Loader;	import flash.net.URLRequest;	import flash.display.Shape;		public class BodyMenuLesson extends Sprite {		public static var ID:uint = 1;				private var elementsMenu:Array;		private var currentLesson:Loader;		public function BodyMenuLesson() {			this.initMenu();			this.initEvents();			this.displayMenu(true);		}				private function initMenu() {			this.elementsMenu = new Array();						this.elementsMenu['tilePanneau'] = new MenuTile(10, 0, 180, 370, 0x333333, 0x444444);			this.elementsMenu['tilePanneau'].setTitle("Panneau");			this.elementsMenu['tilePanneau'].name = "lessons/panneaux/Panneau.swf";			this.elementsMenu['tilePanneau'].setDescription("Apprentissage des panneaux de signalisation");						this.elementsMenu['tileVerifications'] = new MenuTile(200, 0, 560, 180, 0x60ACD9, 0x67BADB);			this.elementsMenu['tileVerifications'].setTitle("Vérifications du véhicule");			this.elementsMenu['tileVerifications'].name = "lessons/verifications/Verifications.swf";			this.elementsMenu['tileVerifications'].setDescription("Apprendre les vérifications d'un véhicule.");						this.elementsMenu['tileCours2'] = new MenuTile(200, 190, 180, 180, 0xFEAB40, 0xFAB43E);			this.elementsMenu['tileCours2'].setTitle("Cours");			this.elementsMenu['tileCours2'].name = "cours";			this.elementsMenu['tileCours2'].setDescription("Cours nécessaire à la réussite du code de la route.");						this.elementsMenu['tileCours3'] = new MenuTile(390, 190, 180, 180, 0xC42933, 0xE64647);			this.elementsMenu['tileCours3'].setTitle("Statistiques");			this.elementsMenu['tileCours3'].name = "stat";			this.elementsMenu['tileCours3'].setDescription("Cours nécessaire à la réussite du code de la route.");						this.elementsMenu['tileCours'] = new MenuTile(580, 190, 180, 180, 0xAF78BE, 0xB289BB);			this.elementsMenu['tileCours'].setTitle("Crédits");			this.elementsMenu['tileCours'].name = "credits";			this.elementsMenu['tileCours'].setDescription("Cours nécessaire à la réussite du code de la route.");		}				private function initEvents() {			for each(var element in this.elementsMenu) {				element.addEventListener(MouseEvent.CLICK, this.onClickTile);			}		}				public function displayMenu(ok:Boolean) {			for each(var element in this.elementsMenu) {				if(ok){					if(this.currentLesson != null) {						removeChild(this.currentLesson);						this.currentLesson = null;					}					addChild(element);				}				else {					removeChild(element);				}								}		}				private function onClickTile(evt:MouseEvent) {			/*for each(var element in this.elementsMenu) {				var myTween:Tween = new Tween(element, "x", Strong.easeOut, element.x, 1200, 2, true);							}*/						this.displayLesson(evt.currentTarget.name);		}						public function displayLesson(lesson:String) {			this.displayMenu(false);			trace("Display Lesson " + lesson);						currentLesson = new Loader();						var image:URLRequest = new URLRequest(lesson);			currentLesson.load(image);						currentLesson.x = 10;/*			var sh:Shape = new Shape();			sh.graphics.beginFill(0xFFFFFF);			sh.graphics.drawRect(0, 0, 940, 440);						sh.x = 10*/			addChild(currentLesson);		}	}	}