package classes.views.body {	import flash.display.Sprite;	import flash.text.TextField;	import classes.views.body.menu.BodyMenuLesson;	import classes.views.body.menu.BodyMenuExamens;	import classes.utils.Constants;	import flash.display.Shape;		public class BodyContent extends Sprite{		private var menuLessonsBody:BodyMenuLesson;		private var menuExamensBody:BodyMenuExamens;		private var activeID:uint;	/*	private var menuPuzzleBody:BodyMenuLesson;		private var menuLessonBody:BodyMenuLesson;		private var menuLessonBody:BodyMenuLesson;*/				public function BodyContent() {			this.menuLessonsBody = new BodyMenuLesson();			this.menuExamensBody = new BodyMenuExamens();						this.clearChilds();			this.visible = true;			setActivePanel(BodyMenuLesson.ID);		}				public function setActivePanel(panel:uint) {						//if(this.activeID == panel)//				return;			this.clearChilds();									this.activeID = panel;			switch(panel) {				case BodyMenuLesson.ID :					addChild(this.menuLessonsBody);					this.menuLessonsBody.displayMenu(true);					this.menuLessonsBody.visible = true;				break;								case BodyMenuExamens.ID :					addChild(this.menuExamensBody);					this.menuExamensBody.visible = true;				break;								default: 							}						this.visible = true;		}				private function clearChilds() {			for(var i:int=0;i<this.numChildren;i++)			{				 this.removeChild(this.getChildAt(i));			}		}	}	}