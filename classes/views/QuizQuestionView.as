package classes.views {	import flash.text.TextFormat;	import fl.controls.RadioButton;	import fl.controls.RadioButtonGroup;		public class QuizQuestionView {		var view; 		var instanciatedAnswers:Array;		public function QuizQuestionView(_view) {			this.view = _view;			this.instanciatedAnswers = new Array();		}				public function getView() {			return this.view;		}				public function addInstanciatedAnswer(_answer) {			this.instanciatedAnswers.push(_answer);		}				public function getInstanciatedAnswers() {			return this.instanciatedAnswers;		}				public function clearInstanciatedAnswers() {			for (var i = 0; i < this.instanciatedAnswers.length; i++) {				view.removeChild(this.instanciatedAnswers[i]);			}			this.instanciatedAnswers = new Array();		}				public function setWrongAnswer() {			for (var i = 0; i < this.instanciatedAnswers.length; i++) {				if(this.instanciatedAnswers[i].selected) {					var tf:TextFormat = new TextFormat();					tf.color = 0xFF0000;					this.instanciatedAnswers[i].setStyle("textFormat", tf);				}			}		}				public function setGoodAnswer(index) {			var tf:TextFormat = new TextFormat();			tf.color = 0x0000FF;			this.instanciatedAnswers[index].setStyle("textFormat", tf);		}				public function setLabelQuestionCounter(label:String) {			view.questionsCounterTextLabel.text = label;		}				public function setLabelScore(label:String) {			view.scoreTextLabel.text = label;		}		public function setButtonEnabled(enable) {			for (var i = 0; i < this.instanciatedAnswers.length; i++) {				this.instanciatedAnswers[i].enabled = enable;			}		}				public function showFinalScore(score, totalQuestions) {			view.finalScore.text = "score final : " + score + "/" + totalQuestions;		}		public function addButtonsRadio(answers) {			var radioGroup:RadioButtonGroup = new RadioButtonGroup("rbg");					for(var j in answers) {				var radioButton:RadioButton = new RadioButton();						radioButton.group = radioGroup;				radioButton.label = answers[j];				radioButton.value = j;				radioButton.move(200, 130+(j*40));								view.addChild(radioButton);				this.addInstanciatedAnswer(radioButton);			}		}	}	}