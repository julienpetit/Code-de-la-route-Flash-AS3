package classes.views {	import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFormat;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormatAlign;	import flash.events.Event;	import classes.utils.Constants;	import classes.controllers.MainController;		public class Head extends Sprite {		private var headTitle:TextField;		private var navigationBar:NavigationBar;						public function Head() {			this.headTitle = new TextField();			this.navigationBar = new NavigationBar();						this.initTitle();			this.initPositions();			this.addSprites();		}				private function initPositions() {						// head initialization 			this.navigationBar.x = 0;			this.navigationBar.y = Constants.headTitleHeight;			this.navigationBar.width = this.width;			this.navigationBar.height = Constants.headNavigationBarHeight;		}				private function addSprites() {			addChild(this.navigationBar);		}				private function initTitle() {						addChild(headTitle);						var inputFormat:TextFormat = new TextFormat();			headTitle.text = "Code de la route";						inputFormat.align = TextFormatAlign.LEFT;			inputFormat.font = "Century Schoolbook";			inputFormat.size = 25;			headTitle.setTextFormat(inputFormat);			headTitle.x = 0;			headTitle.y = 10;			headTitle.textColor = 0xFFFFFF;			headTitle.width = width;			headTitle.name = "title";					}				public function drawUi() {			this.graphics.clear();			this.graphics.beginFill(0xFFFFFF, 0.05);			this.graphics.drawRect(0, 0, width, Constants.headTitleHeight); 			this.graphics.endFill(); 		}				public function getNavigationBar() {			return this.navigationBar;		}				public function setController(controller:MainController) {			this.navigationBar.setController(controller);		}	}	}