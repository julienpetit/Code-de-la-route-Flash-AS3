package classes.views {	import flash.display.Sprite;	import flash.display.StageAlign; 	import flash.display.StageScaleMode; 	import flash.display.GradientType; 	import flash.display.SpreadMethod; 	import flash.display.InterpolationMethod; 	import flash.geom.Matrix; 	import flash.events.Event;	import classes.views.Head;	import classes.controllers.MainController;	import flash.events.FullScreenEvent;	import classes.utils.Constants;	import classes.views.body.BodyContent;			public class Main extends Sprite {		private var head:Head;		private var body:BodyContent;		private var footer:Sprite;				public function Main() {			this.setGradientBackgroundColor();			this.head = new Head();			this.body = new BodyContent();			this.footer = new Sprite();						this.initWindow();			this.initPositions();			this.addSprites();						this.setController(new MainController(this));		}				private function initWindow() {			stage.scaleMode = StageScaleMode.SHOW_ALL; 			stage.align = StageAlign.TOP_LEFT; 		}				private function initPositions() {						// head initialization 			this.head.x = 0;			this.head.y = 0;			this.head.width = this.stage.stageWidth;			this.head.height = Constants.headHeight;			this.head.drawUi();						// Body initialization 			this.body.x = 0;			this.body.y = 100;						// Footer initialization 			this.footer.x = 0;			this.footer.y = 500;			//this.footer.width = this.stage.stageWidth;									}				// Append block to scene		private function addSprites() {			addChild(this.head);			addChild(this.body);			addChild(this.footer);		}				private function setGradientBackgroundColor() {			stage.addEventListener(Event.ADDED, onStageResize); 			stage.addEventListener(Event.RESIZE, onStageResize); 						var backgroundGradient:Sprite = new Sprite(); 			addChildAt(backgroundGradient, 0); 						function onStageResize(e:Event):void{ 				var colors:Array = [Constants.backgroundColorFirst, Constants.backgroundColorlast]; 				var alphas:Array = [1, 1]; 				var ratios:Array = [0, 0xFF]; 				var matrix:Matrix = new Matrix(); 				matrix.createGradientBox(stage.stageWidth, stage.stageHeight, (3 * Math.PI / 2), 0, 10); 				var focalPoint:Number = .5; 				 				with(backgroundGradient.graphics){ 					clear(); 					beginGradientFill(GradientType.LINEAR, colors, alphas, ratios, matrix, SpreadMethod.PAD, InterpolationMethod.RGB, focalPoint); 					drawRect(0, 0, stage.stageWidth, stage.stageHeight); 					endFill(); 				} 			}		}							private function setController(controller:MainController) {			this.head.setController(controller);		}				public function getHead() {			return this.head;		}				public function getBody() {			return this.body;		}	}	}