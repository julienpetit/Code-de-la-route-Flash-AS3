package classes.views {	import flash.events.Event;	import flash.events.MouseEvent;	import flash.display.Sprite;	import flash.text.TextField;		public class NavigationBarButton extends Sprite {				private var defaultTextColor = 0xAAAAAA;		private var hoverTextColor = 0x444444;		private var activeTextColor = 0xFFFFFF;		private var active:Boolean = false;		public function NavigationBarButton(label:String) {			this.buttonMode = true;			this.mouseChildren = false;						this.setTitle(label);			this.setTitleColor(this.defaultTextColor);						this.addEventListener(MouseEvent.MOUSE_OVER, this.onMouseOver);			this.addEventListener(MouseEvent.MOUSE_OUT, this.onMouseOut);		}				public function setTitle(title:String) {			(this.getChildAt(0) as TextField).text = title;		}				public function setTitleColor(color:uint) {			(this.getChildAt(0) as TextField).textColor = color;		}				// Events		private function onMouseOver(evt:MouseEvent) {			this.setTitleColor(this.hoverTextColor);		}				private function onMouseOut(evt:MouseEvent) {			if(this.isActive())				this.setTitleColor(this.activeTextColor);			else 				this.setTitleColor(this.defaultTextColor);		}				public function setActive(active:Boolean) {			this.active = active;			if(active === true) 				this.setTitleColor(this.activeTextColor);			else				this.setTitleColor(this.defaultTextColor);		}				public function isActive() {			return this.active;		}			}	}