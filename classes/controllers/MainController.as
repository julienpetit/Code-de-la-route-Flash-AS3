package  classes.controllers {	import flash.events.Event;	import classes.views.Main;	import flash.events.MouseEvent;	import classes.views.NavigationBarButton;	import classes.views.body.menu.BodyMenuExamens;	import classes.views.body.menu.BodyMenuLesson;		public class MainController{		private var mainSprite:Main;				public function MainController(mainSprite:Main) {			this.mainSprite = mainSprite;						this.mainSprite.getHead().getNavigationBar().setButtonActive(this.mainSprite.getHead().getNavigationBar().getButtonLesson() as NavigationBarButton);			this.mainSprite.getBody().setActivePanel(BodyMenuLesson.ID);		}						public function onClickButtonLesson(evt:MouseEvent) {			trace("Button Lessons Fired.");			this.mainSprite.getHead().getNavigationBar().setButtonActive(evt.currentTarget as NavigationBarButton);			this.mainSprite.getBody().setActivePanel(BodyMenuLesson.ID);		}						public function onClickButtonExamens(evt:MouseEvent) {			trace("Button Examens Fired.");			this.mainSprite.getHead().getNavigationBar().setButtonActive(evt.currentTarget as NavigationBarButton);			this.mainSprite.getBody().setActivePanel(BodyMenuExamens.ID);		}				public function onClickButtonPuzzle(evt:MouseEvent) {			this.mainSprite.getHead().getNavigationBar().setButtonActive(evt.currentTarget as NavigationBarButton);			trace("Button Puzzle Fired.");		}	}	}